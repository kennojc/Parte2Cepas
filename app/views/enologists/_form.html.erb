<%= form_with(model: enologist) do |f| %>
  <% if enologist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(enologist.errors.count, "error") %> prohibited this enologist from being saved:</h2>

      <ul>
        <% enologist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <h3>Revista</h3>
  <div id='magazine'>
    <%= f.fields_for :enologist_magazines do |m| %>
      <%= render 'enologist_magazine_fields', :f => m %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'otra revista', f, :enologist_magazines %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
